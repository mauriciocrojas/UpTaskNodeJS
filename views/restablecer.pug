html(lang="en")
    head
        include partials/header
    body.login 
        .contenedor-formulario 
            h1= nombrePagina 
            
            if locals.mensajes
                .alertas 
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= error

            form.caja-login(method="POST" action="/restablecer")
                .campo 
                    label(for="email") E-mail: 
                    input(type="text" name="email" placeholder="Tu E-mail" value= email)
                <br>
                .campo.enviar
                    input.boton(type="submit" value="Restablecer Password")
                .campo.acciones 
                    a(href="/iniciar-sesion") <br> Ya la recordé, volver a Iniciar Sesión
